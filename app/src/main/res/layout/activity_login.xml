<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/myBackground"
    tools:context=".activities.LoginActivity">

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/myGrey"
        android:textColorHint="@color/myNonHighlightGrey"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:textColor="@color/myWhite"
        android:hint="Email"/>

    <EditText
        android:id="@+id/etPassword"
        android:layout_below="@id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/myGrey"
        android:textColorHint="@color/myNonHighlightGrey"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:textColor="@color/myWhite"
        android:hint="Password"/>

    <Button
        android:id="@+id/btnLogin"
        android:layout_below="@id/etPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/myYellow"
        android:textColor="@color/black"
        android:padding="10dp"
        android:layout_marginHorizontal="10dp"
        android:textSize="18sp"
        android:text="Login"/>


    <TextView
        android:id="@+id/tvCommon"
        android:layout_marginTop="10dp"
        android:layout_below="@id/btnLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="@color/myWhite"
        android:text="Dont have na account? "/>

    <TextView
        android:id="@+id/tvSignup"
        android:textAlignment="center"
        android:layout_below="@id/tvCommon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/myYellow"
        android:text="Sign up"/>



</RelativeLayout>