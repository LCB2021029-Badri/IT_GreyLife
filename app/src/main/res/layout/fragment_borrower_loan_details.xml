<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/myNavBarBg"
    android:paddingTop="5dp"
    android:paddingHorizontal="10dp"
    tools:context=".fragments.BorrowerLoanDetailsFragment">

    <TextView
        android:id="@+id/tvCommon"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/myWhite"
        android:textSize="18sp"
        android:text="Details for "/>

    <TextView
        android:id="@+id/tvLoanType"
        android:layout_toEndOf="@id/tvCommon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/myYellow"
        android:textStyle="bold|italic"
        android:textSize="18sp"
        android:text="Tractor"/>

    <TextView
        android:id="@+id/tcCommon2"
        android:layout_toEndOf="@id/tvLoanType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/myWhite"
        android:textSize="18sp"
        android:text=" Loan"/>

    <LinearLayout
        android:id="@+id/ll"
        android:layout_marginTop="5dp"
        android:layout_below="@id/tvCommon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/ccc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/myWhite"
            android:text="sggrg"/>

        <EditText
            android:id="@+id/etTesting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Type something"
            android:textColor="@color/myWhite"
            android:textColorHint="@color/myWhite"
            android:backgroundTint="@color/myWhite"/>



    </LinearLayout>



</RelativeLayout>