<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/myGrey"
    tools:context=".activities.SignupActivity">

    <EditText
        android:id="@+id/etName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name"/>

    <EditText
        android:id="@+id/etEmail"
        android:layout_below="@id/etName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="email"/>

    <EditText
        android:id="@+id/etConfirmEmail"
        android:layout_below="@id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="confirm email"/>

    <EditText
        android:id="@+id/etPassword"
        android:layout_below="@id/etConfirmEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"/>

    <EditText
        android:layout_below="@id/etPassword"
        android:id="@+id/etConfirmPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Confirm Password"/>

    <RadioGroup
        android:id="@+id/rbGroup"
        android:layout_below="@id/etConfirmPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/rbLender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select this only if you are LENDER"/>

    </RadioGroup>


    <Button
        android:id="@+id/btnSignup"
        android:layout_below="@id/rbGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Signup"/>

    <TextView
        android:id="@+id/tvLogin"
        android:layout_below="@id/btnSignup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login"/>

    <TextView
        android:id="@+id/tvTesting"
        android:layout_below="@id/tvLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Testing"/>

</RelativeLayout>