<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/myBackground"
    android:gravity="center"
    tools:context=".activities.SignupActivity">

    <EditText
        android:id="@+id/etName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/myGrey"
        android:textColorHint="@color/myNonHighlightGrey"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:textColor="@color/myWhite"
        android:hint="Name"/>

    <EditText
        android:id="@+id/etEmail"
        android:layout_below="@id/etName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/myGrey"
        android:textColorHint="@color/myNonHighlightGrey"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:textColor="@color/myWhite"
        android:hint="Email"/>

    <EditText
        android:id="@+id/etConfirmEmail"
        android:layout_below="@id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/myGrey"
        android:textColorHint="@color/myNonHighlightGrey"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:textColor="@color/myWhite"
        android:hint="Confirm Email"/>

    <EditText
        android:id="@+id/etPassword"
        android:layout_below="@id/etConfirmEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/myGrey"
        android:textColorHint="@color/myNonHighlightGrey"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:textColor="@color/myWhite"
        android:hint="Password"/>
    <EditText
        android:id="@+id/etConfirmPassword"
        android:layout_below="@id/etPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/myGrey"
        android:textColorHint="@color/myNonHighlightGrey"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:textColor="@color/myWhite"
        android:hint="Confirm Password"/>

    <RadioGroup
        android:id="@+id/rbGroup"
        android:layout_below="@id/etConfirmPassword"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/rbLender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/myWhite"
            android:buttonTint="@color/myYellow"
            android:text="Select this only if you are LENDER"/>

    </RadioGroup>

    <Button
        android:id="@+id/btnSignup"
        android:layout_below="@id/rbGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/myYellow"
        android:textColor="@color/black"
        android:padding="10dp"
        android:layout_marginHorizontal="10dp"
        android:textSize="18sp"
        android:text="Login"/>


    <TextView
        android:id="@+id/tvCommon"
        android:layout_marginTop="10dp"
        android:layout_below="@id/btnSignup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="@color/myWhite"
        android:text="Already have an account? "/>

    <TextView
        android:id="@+id/tvLogin"
        android:textAlignment="center"
        android:layout_below="@id/tvCommon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/myYellow"
        android:text="Login"/>



</RelativeLayout>